{
  "name": "api",
  "type": "module",
  "version": "0.0.2",
  "scripts": {
    "db:generate": "bunx drizzle-kit generate --dialect sqlite --schema ./src/database/schema.ts",
    "db:generate:run": "bun run db:generate && bun run db:migrate",
    "db:migrate": "bun run ./src/database/migrate.ts",
    "db:generate:prod": "bun --env-file=.env.production x drizzle-kit generate --dialect sqlite --schema ./src/database/schema.ts",
    "db:migrate:prod": "bun --env-file=.env.production run ./src/database/migrate.ts",
    "db:deploy:prod": "bun run db:generate:prod && bun run db:migrate:prod",
    "dev": "bun run --hot src/index.ts",
    "generate:secret": "bun run scripts/generate-jwt-secret.ts",
    "format": "bunx prettier --write \"{scripts,src,tests}/**/*.{ts,tsx,js,jsx,json}\"",
    "test": "bun test",
    "test:watch": "bun test --watch"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.4",
    "@noble/hashes": "^2.0.1",
    "@node-rs/argon2": "^2.0.2",
    "drizzle-orm": "^0.44.7",
    "hono": "^4.10.3",
    "jose": "^6.1.0",
    "nanoid": "^5.1.6",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^24.9.1",
    "drizzle-kit": "^0.31.5",
    "prettier": "^3.7.4",
    "vitest": "^4.0.4"
  }
}
