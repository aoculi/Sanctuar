{
  "apps": [
    {
      "name": "lockmark-api",
      "cwd": ".",
      "script": "src/index.ts",
      "exec_mode": "fork",
      "instances": 1,

      "interpreter": "bun",
      "interpreter_args": ["--env-file=.env.production"],

      "watch": false,
      "ignore_watch": ["node_modules", "logs"],

      "env": {
        "NODE_ENV": "production",
        "PORT": "3500",
        "HOST": "0.0.0.0"
      },

      "autorestart": true,
      "max_memory_restart": "500M",
      "log_date_format": "YYYY-MM-DD HH:mm Z",
      "error_file": "logs/err.log",
      "out_file": "logs/out.log"
    }
  ]
}
